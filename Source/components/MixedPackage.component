        <apex:repeat var="order" value="{!dslOrderListForMail}" rendered="{!checkFlag}">  
        <apex:outputText >   
            <tr>  
               <apex:repeat var="installation" value="{!confirmedInstallationsForMail}">
                 <apex:outputText rendered="{!installation.amsId == order.Address_Id__c}">
                     <td><apex:outputText value="{!installation.FormattedAddress}" style="font-family: verdana;font-size: 11pt"/></td>
                    <!-- <td>{!installation.FullAddress}</td> -->
                 </apex:outputText>                                 
               </apex:repeat>
               <apex:outputText rendered="{!NOT(ISNULL(order.packageBeforeChange__c))}">
                    <td><apex:outputText value="{!order.packageBeforeChange__c}" style="font-family: verdana;font-size: 11pt"/></td>
               </apex:outputText>
               <apex:outputText rendered="{!ISNULL(order.packageBeforeChange__c)}">
                    <td width="15%"><apex:outputText style="font-family: verdana;font-size: 11pt">&nbsp;&nbsp;</apex:outputText></td>
               </apex:outputText>
               <td><apex:outputText value="{!order.ChangePackageDate__c}" style="font-family: verdana;font-size: 11pt"/></td>
               <td><apex:outputText value="{!order.Product_Name__c}" style="font-family: verdana;font-size: 11pt"/></td>
               <apex:outputText rendered="{!AND(order.Order_type__c == 'Downgrade', checkFlag)}">
                    <apex:outputText rendered="{!order.selectedmyBeboer__c == true}">
                       <td width="15%"><apex:outputText value="Ja" style="font-family: verdana;font-size: 11pt"/></td>
                    </apex:outputText>  
                    <apex:outputText rendered="{!order.selectedmyBeboer__c == false}">
                       <td width="15%"><apex:outputText value="Nej" style="font-family: verdana;font-size: 11pt"/></td>
                    </apex:outputText>
                    <apex:outputText rendered="{!OR(order.Order_type__c == 'Cancellation',order.Order_type__c == 'New',order.Order_type__c == 'Upgrade')}">
                       <td width="15%"><apex:outputText style="font-family: verdana;font-size: 11pt">&nbsp;&nbsp;</apex:outputText></td>
                    </apex:outputText>
               </apex:outputText>   
               <apex:outputText rendered="{!NOT(AND(order.Order_type__c == 'Downgrade', checkFlag))}">
                       <td width="15%"><apex:outputText style="font-family: verdana;font-size: 11pt">&nbsp;&nbsp;</apex:outputText></td>      
               </apex:outputText>
            </tr>  
          </apex:outputText>
      </apex:repeat>
      
     <apex:repeat var="order" value="{!dslOrderListForMail}" rendered="{!NOT(checkFlag)}">  
        <apex:outputText >   
            <tr>  
               <apex:repeat var="installation" value="{!confirmedInstallationsForMail}">
                 <apex:outputText rendered="{!installation.amsId == order.Address_Id__c}">
                    <td><apex:outputText value="{!installation.FormattedAddress}" style="font-family: verdana;font-size: 11pt"/></td>
                    <!-- <td>{!installation.FullAddress}</td> -->
                 </apex:outputText>                                 
               </apex:repeat>
               
               <apex:outputText rendered="{!NOT(ISNULL(order.packageBeforeChange__c))}">
                    <td><apex:outputText value="{!order.packageBeforeChange__c}" style="font-family: verdana;font-size: 11pt"/></td>
                </apex:outputText>
               <apex:outputText rendered="{!ISNULL(order.packageBeforeChange__c)}">
                    <td width="15%"><apex:outputText style="font-family: verdana;font-size: 11pt">&nbsp;&nbsp;</apex:outputText></td>
               </apex:outputText>
               <!-- <td>{!order.packageBeforeChange__c}</td> -->
               <td><apex:outputText value="{!order.ChangePackageDate__c}" style="font-family: verdana;font-size: 11pt"/></td>
               <td><apex:outputText value="{!order.Product_Name__c}" style="font-family: verdana;font-size: 11pt"/></td>
               <!-- <apex:outputText rendered="{!order.selectedmyBeboer__c == true}">
